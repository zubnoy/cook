module apparg;

private
{
    import std.conv;
}

/* 
 * Argument container
 */ 

final class AppArgument
{
   public:
    string name;
    string[] value;

    this(string name)
    {
        this.name = name;
        addValue("1");
    }

    string getName()
    {
        return name;
    }

    void addValue(string v)
    {
        value ~= v;
        value[0] = to!string(value.length);
    }

    string[] getValuesArray()
    {
        return value;
    }

    string getValueString(int i = 0)
    {
        return value[i];
    }

    int getValueInt(int i = 0)
    {
        return to!int(value[i]);
    }

    bool getValueBool(int i = 0)
    {
        return cast(bool)to!int(value[i]);
    }

    size_t length()
    {
        return getValueInt();
    }

    string toString()
    {
        string output = name ~ ": ";
        foreach(i, v; value)
            output ~= (i == value.length-1)? (v) : (v ~ ", ");
        return output;
    }

    string dump()
    {
        string output = "\n" ~ name;
        foreach(i, v; value[1..$])
            output ~= "\n" ~ v; //(i == value.length-1)? (v) : (v ~ ", ");
        return output;
    }
}

// Parse arguments passed to the program
AppArgument[string] readArguments(string[] args)
{
    AppArgument[string] appArguments;
    appArguments["_program_"] = new AppArgument(args[0]);
    AppArgument tempArgument = new AppArgument("_main_");
    appArguments["_main_"] = tempArgument;
    string argStr = "";
    foreach(i; 1..args.length)
    {
        string arg = args[i];
        if (arg[0] == '-')
        {
            if (arg[0..2] == "-C" || arg[0..2] == "-L")
            {
                argStr = arg[2..$];
                arg = arg[0..2];
            } 
            if (!(arg in appArguments))
            {
                tempArgument = new AppArgument(arg);
                appArguments[arg] = tempArgument;
            }
            else
            { 
                tempArgument = appArguments[arg];
            }

            if (argStr.length > 0)
            {
                tempArgument.addValue(argStr);
                argStr = "";
            }
        }
        else
        {
            tempArgument.addValue(arg);
        }
    }
    return appArguments;
}

